    <%= javascript_include_tag "application" %>
  </head>
<body>
    
  <div id="main">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="hidden-xs" style="margin-top: 20px"></div>
          <%= yield %>    
        </div>

        <footer class="container hidden-xs col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <p>&copy; CRM 2017</p>
        </footer>
    </div>
  </div>
        


  </body>
